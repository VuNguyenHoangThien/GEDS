{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular/cdk-experimental": ["apps/geds/src/cdk-experimental"],
      "@angular/cdk-experimental/*": ["apps/geds/src/cdk-experimental/*"],
      "@angular/components-examples": ["apps/geds/src/components-examples"],
      "@angular/components-examples/*": ["apps/geds/src/components-examples/*"],
      "@angular/material-experimental": ["apps/geds/src/material-experimental"],
      "@angular/material-experimental/*": [
        "apps/geds/src/material-experimental/*"
      ],
      "@geds/card": ["libs/card/src/index.ts"],
      "@geds/cdk": ["libs/cdk/src/index.ts"],
      "@geds/core": ["libs/core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
